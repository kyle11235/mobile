<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical" 
    android:gravity="right"
    android:id="@+id/lv">

   <Button 
       android:id="@+id/btn1" 
       android:text="@string/add"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />

   <TableLayout
       android:id="@+id/table1"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="0" >
       
       <TableRow 
           	android:id="@+id/tb1"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
         	>
         	<TextView 
	           android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
	           android:id="@+id/tv1"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#0000FF"
	           android:textColor="#000000"
	           />
       </TableRow>
   </TableLayout>
   
   <TableLayout
       android:id="@+id/table2" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" 
       android:stretchColumns="0"
       >
         <TableRow 
           	android:id="@+id/tb2"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
         	>
         	<TextView 
	           android:text="aa"
	           android:id="@+id/tv2"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#00FF00"
	           android:textColor="#000000"
	           />
         	<TextView 
	           android:text="bb"
	           android:id="@+id/tv3"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#0000FF"
	           android:textColor="#000000"
	           />
       </TableRow>
   </TableLayout>
   
   <TableLayout
       android:id="@+id/table3" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" 
       android:shrinkColumns="0"
       android:collapseColumns="1">
           <TableRow 
           	android:id="@+id/tb3"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
         	>
         	<TextView 
	           android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
	           android:id="@+id/tv4"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#00FF00"
	           android:textColor="#000000"
	           />
         	<TextView 
	           android:text="hiddenhiddenhiddenhidden"
	           android:id="@+id/tv5"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#0000FF"
	           android:textColor="#000000"
	           />
         	<TextView 
	           android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
	           android:id="@+id/tv6"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_margin="4dp"
	           android:background="#0000FF"
	           android:textColor="#000000"
	           />
       </TableRow>
   </TableLayout>
   
</LinearLayout>
